<%= form_with(model: post_reply, local: true) do |form| %>

  <div class="grid-x"> 
    <div class="cell small-8">
      <%= form.text_field :content, rows: 1,placeholder: "Enter reply here", style: "font-size: 12px; height: 40px;" %>
      <%= form.hidden_field :post_id, value: post.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
    <div class="cell small-4">
      <%= form.submit "Reply", class: "button secondary expanded" %>
    </div>
  </div>
<% end %>
