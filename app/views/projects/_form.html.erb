<%= nested_form_for @project do |form| %>

  <div class="field">
    <h3>Attach to a category</h3>
      <%= form.collection_select(:category_id, Category.all,
                  :id, :title,
                 {:prompt => 'Select a category'})%>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="cell small-12">
      <%= form.text_field :title, placeholder: "Give your project a title" %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="cell small-12">
      <%= form.text_field :address, placeholder: "Project Address" %>
    </div>
    <div class="cell small-6">
      <%= form.text_field :city, placeholder: "City" %>
    </div>
    <div class="cell small-3">
      <%= form.text_field :state, placeholder: "State" %>
    </div>
    <div class="cell small-3">
      <%= form.text_field :postcode, placeholder: "Postcode" %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="cell small-12">
      <h3>Does your project already have a contract price?</h3>

          <%= form.text_field :base_price, placeholder: "0.00" %>
          <small style="color: #aaa">Don't add $. If zero base price add 0.00</small> 

    </div>
  </div>

  <div style="padding: 20px; background-color: #f5f5f5; border: 2px solid #e5e5e5; margin-top: 40px;">

    <h3>Add zones to your project</h3>
    <p class="lead">Zones are areas of your project. Eg: Kitchen, Bedroom 1, Master Bedroom, Bathroom etc.</p>

  <%= form.fields_for :zones do |zone| %>
  <div class="grid-x grid-margin-x" style="margin-bottom: 40px; border: 4px dashed #aaa; padding: 20px;">
    <div class="cell small-12">
    <%= zone.text_field :title, placeholder: "Zone title" %>
  </div>
  <div class="cell small-12 text-right">
    <%= zone.link_to_remove "Remove this zone", class: "button alert", style: "color: #fff; font-weight: 700;" %>
  </div>
</div>
  <% end %>
  <p><%= form.link_to_add "Add a zone", :zones, class: "button success", style: "color: #fff; font-weight: 700;"  %></p>
  
  </div>

  <div class="actions">
    <%= form.submit "Submit Project", class: "button large expanded success" %>
  </div>
<% end %>
