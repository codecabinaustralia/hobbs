<%= nested_form_for @project do |form| %>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all,
                  :id, :title,
                 {:prompt => 'Select a category'})%>
  </div>

  <div class="field">
    <%= form.label :client_id %>
    <%= form.collection_select(:client_id, Client.all,
                  :id, :full_name,
                 {:prompt => 'Select a client'})%>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode %>
  </div>

  <div class="field">
    <%= form.label :base_price %>
    <%= form.text_field :base_price %>
    if zero base price add 0.00
  </div>

  <%= form.fields_for :zones do |zone| %>
    <%= zone.text_field :title %>
    <%= zone.link_to_remove "Remove this zone" %>
  <% end %>
  <p><%= form.link_to_add "Add a zone", :zones %></p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
